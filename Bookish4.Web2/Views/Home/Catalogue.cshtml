@{
    ViewData["Title"] = "Catalogue";
}
@using System.Globalization
@using System.IO
@model List<BookViewModel>;


<h1>@ViewData["Title"]</h1>

<div class="search-container">
    <form action="/Home/Catalogue" method="GET">
        <input type="text" placeholder="Search by title or author" name="search">
        <button type="submit">Submit</button>
    </form>
</div>


@if (Model.Count == 0)
{
    <p>No books matched your search :(</p>
} else if (Model.First().wasSearched)
        {
         <p>Your search returned @Model.Count result(s):</p>
        }
        else
        {
            <p>Here's what's in the catalogue:</p>   
        }
<ul>
    @foreach (var viewModel in Model)
    {
        <li>
            @* <a asp-area="" asp-controller="Home" asp-action="Book" asp-route-id="@viewModel.Isbn">@viewModel</a> *@
            <a href = "Book/@viewModel.Isbn">@viewModel</a>
            </li>
    }
</ul>